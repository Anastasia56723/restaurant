import logging

from aiogram import Bot, Dispatcher, executor, types
from aiogram.types import InputFile
from aiogram.types import ReplyKeyboardRemove,ReplyKeyboardMarkup, KeyboardButton, InlineKeyboardMarkup, InlineKeyboardButton

API_TOKEN = '2019302491:AAFS80zm_gr6EUsBvEL5g9RVlDR8Itsrl4c'
bot = Bot(token=API_TOKEN)
dp = Dispatcher(bot)

logging.basicConfig(level=logging.INFO)

#–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ

@dp.message_handler(commands=['start'])
async def send_welcome(message: types.Message):

    buttons = [
        types.InlineKeyboardButton(text="–î–∞",callback_data="1"),
        types.InlineKeyboardButton(text="–ù–µ—Ç",callback_data="2")
    ]
    keyboard = types.InlineKeyboardMarkup(row_width=2)
    keyboard.add(*buttons)
    
    pic1 = InputFile("D:/aaaaNastya/Photos/2a3ebd203fb110d952f422a9e6f19108-800x.jpg")
    await bot.send_photo(message.from_user.id, pic1, caption='–î–æ–±—Ä—ã–π –¥–µ–Ω—å! –Ø - –±–æ—Ç-–∫—É—Ä—å–µ—Ä Katerin. –í –Ω–∞—à–µ–º —Ä–µ—Å—Ç–æ—Ä–∞–Ω–µ –¥–æ–≤–æ–ª—å–Ω–æ —Ä–∞–∑–Ω–æ–æ–±—Ä–∞–∑–Ω–æ–µ –º–µ–Ω—é. –í—ã —Ö–æ—Ç–∏—Ç–µ —Å–¥–µ–ª–∞—Ç—å –∑–∞–∫–∞–∑? ',reply_markup=keyboard)

    return keyboard 

#–û—Å–Ω–æ–≤–Ω–∞—è —á–∞—Å—Ç—å. –í—ã–±–æ—Ä –±–ª—é–¥–∞

@dp.callback_query_handler(text_contains='1')
async def callbacks_data(message: types.CallbackQuery):
    buttons = [
        types.InlineKeyboardButton(text="–ü–∏—Ü—Ü–∞",callback_data="pizza"),
        types.InlineKeyboardButton(text="–†–æ–ª–ª—ã",callback_data="rolls"),
        types.InlineKeyboardButton(text="–ü–∞—Å—Ç–∞",callback_data="pasta")
    ]
    keyboard = types.InlineKeyboardMarkup(row_width=2)
    keyboard.add(*buttons)

    await bot.send_message(message.from_user.id,text= '–ß—Ç–æ –≤—ã —Ö–æ—Ç–∏—Ç–µ –∑–∞–∫–∞–∑–∞—Ç—å?üôà',reply_markup=keyboard)

