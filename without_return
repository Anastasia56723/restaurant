@dp.callback_query_handler(text_contains='ret')
async def callbacks_data(message: types.CallbackQuery):
    keyboard = types.ReplyKeyboardMarkup(resize_keyboard=True)
    keyboard.add(*[types.KeyboardButton(advert) for advert in ['–í –Ω–∞—á–∞–ª–æ']])
    await bot.send_message(message.from_user.id,text='–•–æ—Ä–æ—à–æ',reply_markup=keyboard)
    return callbacks_data()


